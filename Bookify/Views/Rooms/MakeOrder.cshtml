								<option value="Executive Suite">Executive Suite</option>
								<option value="Presidential Suite">Presidential Suite</option>
							</optgroup>

							<optgroup label="Special View Rooms">
								<option value="Sea View Room">Sea View Room</option>
								<option value="City View Room">City View Room</option>
								<option value="Garden View Room">Garden View Room</option>
								<option value="Poolside Room">Poolside Room</option>
							</optgroup>

							<optgroup label="Family & Group Rooms">
								<option value="Triple Room">Triple Room</option>
								<option value="Family Suite">Family Suite (for 4+ people)</option>
								<option value="Connecting Rooms">Connecting Rooms</option>
							</optgroup>

							<optgroup label="Special Experience Rooms">
								<option value="Honeymoon Suite">Honeymoon Suite</option>
								<option value="Accessible Room">Accessible Room (for guests with disabilities)</option>
								<option value="Pet-Friendly Room">Pet-Friendly Room</option>
							</optgroup>

						</select>
