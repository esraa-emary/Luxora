@model Bookify.DataAccessLayer.Entities.Room
@{
    ViewData["Title"] = "Edit Room";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/admin-dashboard.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <div class="admin-container">
        <!-- Sidebar -->
        <aside class="admin-sidebar">
            <div class="sidebar-header">
                <i class="fas fa-hotel"></i>
                <h2>Luxora Admin</h2>
            </div>
            <nav class="sidebar-nav">
                <a href="@Url.Action("Index", "Admin")" class="nav-item">
                    <i class="fas fa-dashboard"></i>
                    <span>Dashboard</span>
                </a>
                <a href="@Url.Action("ManageRooms", "Admin")" class="nav-item active">
                    <i class="fas fa-door-open"></i>
                    <span>Manage Rooms</span>
                </a>
                <a href="@Url.Action("ManageReservations", "Admin")" class="nav-item">
                    <i class="fas fa-calendar-check"></i>
                    <span>Reservations</span>
                </a>
                <a href="@Url.Action("ManageCustomers", "Admin")" class="nav-item">
                    <i class="fas fa-users"></i>
                    <span>Customers</span>
                </a>
                <div class="nav-divider"></div>
                <a href="@Url.Action("ViewAsUser", "Admin")" class="nav-item">
                    <i class="fas fa-user"></i>
                    <span>View as User</span>
                </a>
                <a href="@Url.Action("Logout", "Auth")" class="nav-item">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="admin-main">
            <!-- Top Bar -->
            <div class="admin-topbar">
                <h1>Edit Room #@Model.RoomNumber</h1>
                <div class="admin-user">
                    <i class="fas fa-user-circle"></i>
                    <span>Welcome, @ViewBag.UserName</span>
                </div>
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-circle"></i>
                    @ViewBag.Error
                </div>
            }

            <!-- Form -->
            <div class="form-container">
                <form method="post" action="@Url.Action("EditRoom", "Admin")" class="admin-form">
                    <input type="hidden" name="roomNumber" value="@Model.RoomNumber">
                    
                    <div class="form-grid">
                        <div class="form-group">
                            <label for="roomNumber">
                                <i class="fas fa-hashtag"></i> Room Number
                            </label>
                            <input type="number" id="roomNumberDisplay" value="@Model.RoomNumber" 
                                   disabled class="disabled">
                        </div>

                        <div class="form-group">
                            <label for="roomName">
                                <i class="fas fa-tag"></i> Room Name
                            </label>
                            <input type="text" id="roomName" name="roomName" required 
                                   value="@Model.RoomName" maxlength="100">
                        </div>

                        <div class="form-group">
                            <label for="roomTypeId">
                                <i class="fas fa-bed"></i> Room Type
                            </label>
                            <select id="roomTypeId" name="roomTypeId" required>
                                @foreach (var roomType in ViewBag.RoomTypes)
                                {
                                    if (roomType.RoomTypeId == Model.RoomTypeId)
                                    {
                                        <option value="@roomType.RoomTypeId" selected>@roomType.TypeName</option>
                                    }
                                    else
                                    {
                                        <option value="@roomType.RoomTypeId">@roomType.TypeName</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="price">
                                <i class="fas fa-dollar-sign"></i> Price per Night
                            </label>
                            <input type="number" id="price" name="price" required 
                                   value="@Model.Price" min="0" step="0.01">
                        </div>

                        <div class="form-group">
                            <label for="status">
                                <i class="fas fa-toggle-on"></i> Status
                            </label>
                            <select id="status" name="status" required>
                                <option value="Available" selected="@(Model.Status == "Available")">Available</option>
                                <option value="Occupied" selected="@(Model.Status == "Occupied")">Occupied</option>
                                <option value="Maintenance" selected="@(Model.Status == "Maintenance")">Maintenance</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="capacity">
                                <i class="fas fa-users"></i> Capacity
                            </label>
                            <input type="number" id="capacity" name="capacity" required 
                                   value="@Model.Capacity" min="1" max="10">
                        </div>

                        <div class="form-group">
                            <label for="size">
                                <i class="fas fa-ruler-combined"></i> Size (sq m)
                            </label>
                            <input type="text" id="size" name="size" required 
                                   value="@Model.Size" maxlength="50">
                        </div>

                        <div class="form-group">
                            <label for="bedType">
                                <i class="fas fa-bed"></i> Bed Type
                            </label>
                            <input type="text" id="bedType" name="bedType" required 
                                   value="@Model.BedType" maxlength="100">
                        </div>

                        <div class="form-group">
                            <label for="view">
                                <i class="fas fa-eye"></i> View
                            </label>
                            <input type="text" id="view" name="view" required 
                                   value="@Model.View" maxlength="100">
                        </div>
                    </div>

                    <div class="form-group full-width">
                        <label for="imageUrl">
                            <i class="fas fa-image"></i> Image URL
                        </label>
                        <input type="url" id="imageUrl" name="imageUrl" required 
                               value="@Model.ImageUrl">
                        <small style="color: #666; font-size: 0.85em;">Enter a valid URL for the room image</small>
                    </div>

                    <div class="form-group full-width">
                        <label for="description">
                            <i class="fas fa-align-left"></i> Description
                        </label>
                        <textarea id="description" name="description" rows="4" required>@Model.Description</textarea>
                    </div>

                    <div class="form-group full-width">
                        <label for="amenities">
                            <i class="fas fa-concierge-bell"></i> Amenities
                        </label>
                        <textarea id="amenities" name="amenities" rows="3" required 
                                  placeholder="e.g., WiFi,Air Conditioning,TV,Mini Bar">@Model.Amenities</textarea>
                        <small style="color: #666; font-size: 0.85em;">Separate amenities with commas</small>
                    </div>

                    <div class="form-actions">
                        <a href="@Url.Action("ManageRooms", "Admin")" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Update Room
                        </button>
                    </div>
                </form>
            </div>
        </main>
    </div>
</body>
</html>




