@{
    ViewData["Title"] = "Add New Room";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/admin-dashboard.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <div class="admin-container">
        <!-- Sidebar -->
        <aside class="admin-sidebar">
            <div class="sidebar-header">
                <i class="fas fa-hotel"></i>
                <h2>Luxora Admin</h2>
            </div>
            <nav class="sidebar-nav">
                <a href="@Url.Action("Index", "Admin")" class="nav-item">
                    <i class="fas fa-dashboard"></i>
                    <span>Dashboard</span>
                </a>
                <a href="@Url.Action("ManageRooms", "Admin")" class="nav-item active">
                    <i class="fas fa-door-open"></i>
                    <span>Manage Rooms</span>
                </a>
                <a href="@Url.Action("ManageReservations", "Admin")" class="nav-item">
                    <i class="fas fa-calendar-check"></i>
                    <span>Reservations</span>
                </a>
                <a href="@Url.Action("ManageCustomers", "Admin")" class="nav-item">
                    <i class="fas fa-users"></i>
                    <span>Customers</span>
                </a>
                <div class="nav-divider"></div>
                <a href="@Url.Action("ViewAsUser", "Admin")" class="nav-item">
                    <i class="fas fa-user"></i>
                    <span>View as User</span>
                </a>
                <a href="@Url.Action("Logout", "Auth")" class="nav-item">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="admin-main">
            <!-- Top Bar -->
            <div class="admin-topbar">
                <h1>Add New Room</h1>
                <div class="admin-user">
                    <i class="fas fa-user-circle"></i>
                    <span>Welcome, @ViewBag.UserName</span>
                </div>
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-circle"></i>
                    @ViewBag.Error
                </div>
            }

            <!-- Form -->
            <div class="form-container">
                <form method="post" action="@Url.Action("AddRoom", "Admin")" class="admin-form">
                    <div class="form-grid">
                        <div class="form-group">
                            <label for="roomNumber">
                                <i class="fas fa-hashtag"></i> Room Number
                            </label>
                            <input type="number" id="roomNumber" name="roomNumber" required 
                                   placeholder="Enter room number" min="1">
                        </div>

                        <div class="form-group">
                            <label for="roomName">
                                <i class="fas fa-tag"></i> Room Name
                            </label>
                            <input type="text" id="roomName" name="roomName" required 
                                   placeholder="e.g., Presidential Suite" maxlength="100">
                        </div>

                        <div class="form-group">
                            <label for="roomTypeId">
                                <i class="fas fa-bed"></i> Room Type
                            </label>
                            <select id="roomTypeId" name="roomTypeId" required>
                                <option value="">Select room type</option>
                                @foreach (var roomType in ViewBag.RoomTypes)
                                {
                                    <option value="@roomType.RoomTypeId">@roomType.TypeName</option>
                                }
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="price">
                                <i class="fas fa-dollar-sign"></i> Price per Night
                            </label>
                            <input type="number" id="price" name="price" required 
                                   placeholder="Enter price" min="0" step="0.01">
                        </div>

                        <div class="form-group">
                            <label for="status">
                                <i class="fas fa-toggle-on"></i> Status
                            </label>
                            <select id="status" name="status" required>
                                <option value="Available">Available</option>
                                <option value="Occupied">Occupied</option>
                                <option value="Maintenance">Maintenance</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group full-width">
                        <label for="imageUrl">
                            <i class="fas fa-image"></i> Image URL
                        </label>
                        <input type="url" id="imageUrl" name="imageUrl" required 
                               placeholder="https://example.com/image.jpg">
                        <small style="color: #666; font-size: 0.85em;">Enter a valid URL for the room image</small>
                    </div>

                    <div class="form-group full-width">
                        <label for="description">
                            <i class="fas fa-align-left"></i> Description
                        </label>
                        <textarea id="description" name="description" rows="4" required 
                                  placeholder="Enter room description..."></textarea>
                    </div>

                    <div class="form-actions">
                        <a href="@Url.Action("ManageRooms", "Admin")" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Add Room
                        </button>
                    </div>
                </form>
            </div>
        </main>
    </div>
</body>
</html>




