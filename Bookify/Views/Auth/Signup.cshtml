@{
    ViewData["Title"] = "Sign Up - Bookify";
}

<div class="auth-container">
    <section class="auth-hero-section">
        <div class="auth-background">
            <div class="auth-overlay"></div>
        </div>
        
        <div class="auth-content center-center">
            <div class="auth-form-container">
                <div class="auth-form-header center-center col">
                    <h1>Join Bookify</h1>
                    <p>Create your account to start booking amazing stays</p>
                </div>

                <form asp-controller="Auth" asp-action="Signup" method="post" class="auth-form center-center col">
                    <div class="auth-inputs">
                        <div class="auth-input-row">
                            <div class="auth-input-group">
                                <label for="firstName">First Name</label>
                                <input type="text" id="firstName" name="firstName" required placeholder="Enter your first name" />
                            </div>
                            <div class="auth-input-group">
                                <label for="lastName">Last Name</label>
                                <input type="text" id="lastName" name="lastName" required placeholder="Enter your last name" />
                            </div>
                        </div>

                        <div class="auth-input-group">
                            <label for="email">Email Address</label>
                            <input type="email" id="email" name="email" required placeholder="Enter your email" />
                        </div>

                        <div class="auth-input-group">
                            <label for="password">Password</label>
                            <input type="password" id="password" name="password" required placeholder="Create a strong password" />
                        </div>

                        <div class="auth-input-group">
                            <label for="confirmPassword">Confirm Password</label>
                            <input type="password" id="confirmPassword" name="confirmPassword" required placeholder="Confirm your password" />
                        </div>

                        <div class="auth-options center-between">
                            <label class="remember-me">
                                <input type="checkbox" name="agreeToTerms" required />
                                <span class="checkmark"></span>
                                I agree to the <a href="#" class="auth-link">Terms & Conditions</a>
                            </label>
                        </div>

                        <div class="auth-button-group center-center">
                            <button type="submit" class="auth-btn auth-btn-primary">Create Account</button>
                        </div>
                    </div>
                </form>

                <div class="auth-footer center-center">
                    <p>Already have an account? <a asp-controller="Auth" asp-action="Login" class="auth-link">Sign in</a></p>
                </div>

                <div class="auth-divider center-center">
                    <span>or</span>
                </div>

                <div class="social-auth center-center col">
                    <button type="button" class="social-btn google-btn center-center">
                        <span>Sign up with Google</span>
                    </button>
                    <button type="button" class="social-btn facebook-btn center-center">
                        <span>Sign up with Facebook</span>
                    </button>
                </div>
            </div>
        </div>
    </section>

    <!-- Benefits Section -->
    <section class="auth-features center-center">
        <div class="features-container">
            <h2>Your Journey Starts Here</h2>
            <div class="features-grid">
                <div class="feature-card center-center col">
