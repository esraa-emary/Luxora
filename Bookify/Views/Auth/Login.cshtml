@{
    ViewData["Title"] = "Login - Bookify";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
<link href="~/css/login.css" rel="stylesheet" />
<div class="auth-container">
    <section class="auth-hero-section">
        <div class="auth-background"></div>
        <div class="auth-overlay"></div>
        <div class="auth-particles" id="particlesContainer"></div>

        <div class="auth-content">
            <div class="auth-form-container" style="margin-top: 100px;">
                <div class="auth-form-header">
                    <div class="brand-logo">
                        <i class="fas fa-hotel"></i>
                    </div>
                    <h1>Welcome Back</h1>
                    <p>Sign in to your Luxora account</p>
                </div>

                @if (ViewBag.Error != null)
                {
                    <div class="auth-alert auth-alert-error">
                        <i class="fas fa-exclamation-circle"></i>
                        @ViewBag.Error
                    </div>
                }

                <form class="auth-form" id="loginForm" method="post" asp-controller="Auth" asp-action="Login">
                    <div class="auth-inputs">
                        <div class="auth-input-group">
                            <label for="email">Email Address</label>
                            <div class="input-wrapper">
                                <input type="email"
                                       id="email"
                                       name="email"
                                       required
                                       placeholder="Enter your email address"
                                       autocomplete="email">
                                <i class="fas fa-envelope input-icon"></i>
                            </div>
                            <div class="validation-message" id="emailError">
                                <i class="fas fa-exclamation-triangle"></i>
                                <span></span>
                            </div>
                        </div>
                        <div class="auth-input-group">
                            <label for="password">Password</label>
                            <div class="input-wrapper">
                                <input type="password"
                                       id="password"
                                       name="password"
                                       required
                                       placeholder="Enter your password"
                                       autocomplete="current-password">
                                <i class="fas fa-lock input-icon"></i>
                                <i class="fas fa-eye password-toggle" id="passwordToggle"></i>
                            </div>
                            <div class="validation-message" id="passwordError">
                                <i class="fas fa-exclamation-triangle"></i>
                                <span></span>
                            </div>
                        </div>
                        <div class="auth-options">
                            <label class="remember-me">
                                <input type="checkbox" name="rememberMe" id="rememberMe">
                                <div class="custom-checkbox"></div>
                                <span>Remember me</span>
                            </label>
                            <a href="#" class="forgot-password" id="forgotPasswordLink">
                                Forgot Password?
                            </a>
                        </div>
                        <div class="auth-button-group">
                            <button type="submit" class="auth-btn auth-btn-primary" id="submitBtn">
                                <div class="btn-loading">
                                    <div class="loading-spinner"></div>
                                    <span class="btn-text">Sign In</span>
                                </div>
                            </button>
                        </div>
                    </div>
                </form>
                <div class="auth-footer">
                    <p>Don't have an account? <a href="#" class="auth-link">Sign up here</a></p>
                </div>
                <div class="auth-divider">
                    <span>or continue with</span>
                </div>
                <div class="social-auth">
                    <button type="button" class="social-btn google-btn" id="googleSignIn">
                        <i class="fab fa-google social-icon"></i>
                        <span>Continue with Google</span>
                    </button>
                    <button type="button" class="social-btn facebook-btn" id="facebookSignIn">
                        <i class="fab fa-facebook-f social-icon"></i>
                        <span>Continue with Facebook</span>
                    </button>
                </div>
            </div>
        </div>
    </section>
    <section class="auth-features">
        <div class="features-container">
            <div class="features-header">
                <h2>Why Choose Bookify?</h2>
                <p class="features-subtitle">
                    Experience the future of hotel management with our comprehensive platform
                    designed for modern hospitality professionals.
                </p>
            </div>

            <div class="features-grid">
                <div class="feature-card">
                    <div class="feature-icon">üè®</div>
                    <h3>Premium Accommodations</h3>
                    <p>
                        Access to luxury rooms and suites with world-class amenities.
                        Our carefully curated properties ensure exceptional comfort and service
                        for every guest experience.
                    </p>
                </div>

                <div class="feature-card">
                    <div class="feature-icon">‚ö°</div>
                    <h3>Instant Booking System</h3>
                    <p>
