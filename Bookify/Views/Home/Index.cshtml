<section class="hotel-gallery-section">
	<div class="gallery-header">
		<div class="floating-elements">
			<div class="floating-dot"></div>
			<div class="floating-dot"></div>
			<div class="floating-dot"></div>
		</div>
		<h2>Hotel <span class="gold-accent">Gallery</span></h2>
		<div class="header-line"></div>
		<p class="gallery-subtitle">Explore our luxurious accommodations, amenities, and facilities through our visual journey</p>
		<div class="gallery-stats">
			<div class="stat-item">
				<span class="stat-number" data-target="150">0</span>
				<span class="stat-label">Luxury Rooms</span>
			</div>
			<div class="stat-item">
				<span class="stat-number" data-target="5">0</span>
				<span class="stat-label">Star Rating</span>
			</div>
			<div class="stat-item">
				<span class="stat-number" data-target="25">0</span>
				<span class="stat-label">Years Experience</span>
			</div>
		</div>
	</div>

	<div class="gallery-filters">
		<button class="gallery-filter active" data-filter="all">
			<i class="fas fa-th-large"></i>
			All
		</button>
		<button class="gallery-filter" data-filter="rooms">
			<i class="fas fa-bed"></i>
			Rooms & Suites
		</button>
		<button class="gallery-filter" data-filter="dining">
			<i class="fas fa-utensils"></i>
			Dining
		</button>
		<button class="gallery-filter" data-filter="pool">
			<i class="fas fa-swimming-pool"></i>
			Pool & Spa
		</button>
		<button class="gallery-filter" data-filter="events">
			<i class="fas fa-calendar-alt"></i>
			Events
		</button>
		<button class="gallery-filter" data-filter="lobby">
			<i class="fas fa-building"></i>
			Lobby
		</button>
	</div>

	<div class="gallery-search">
		<div class="search-container">
			<input type="text" placeholder="Search gallery..." id="searchInput">
			<i class="fas fa-search"></i>
		</div>
	</div>

	@model IEnumerable<Bookify.DataAccessLayer.Entities.Room>

	<div class="gallery-grid" id="galleryGrid">
		@foreach (var room in Model)
		{
			<div class="gallery-item"
				 data-category="@room.RoomType.TypeName.ToLower()"
				 data-tags="@room.RoomName.ToLower() @room.RoomType.TypeName.ToLower()">

				<div class="image-container">
					<img src="@room.ImageUrl" alt="@room.RoomName">
					<div class="image-overlay">
						<div class="zoom-icon"><i class="fas fa-expand"></i></div>
						<div class="favorite-btn"><i class="far fa-heart"></i></div>
					</div>
				</div>

				<div class="gallery-overlay">
					<div class="gallery-item-title">@room.RoomName</div>
					<div class="gallery-item-desc">@room.Description</div>
					<div class="item-tags">
						<span class="tag">@room.RoomType.TypeName.ToUpper()</span>
						<span class="tag">@room.Status</span>
						<span class="tag">Price: @room.Price.ToString("C")</span>
					</div>
				</div>
			</div>
		}
	</div>

	<div class="load-more-container">
		<button class="load-more-btn" id="loadMoreBtn">
			<i class="fas fa-plus"></i>
			Load More Images
		</button>
	</div>

	<div class="video-tour">
		<div class="video-header">
			<h3><i class="fas fa-video"></i> Virtual Hotel Tour</h3>
			<p>Experience our luxury facilities through this immersive video journey</p>
		</div>
		<div class="video-container">
			<div class="video-placeholder" id="videoPlaceholder">
				<div class="play-button">
					<i class="fas fa-play"></i>
				</div>
				<div class="video-info">
					<h4>HD Virtual Tour</h4>
					<p>3 minutes • 4K Quality</p>
				</div>
			</div>
			<iframe id="hotelVideo" src="" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen style="display: none;"></iframe>
		</div>
	</div>
	<div class="gallery-actions">
		<button class="action-btn" id="shareGallery">
			<i class="fas fa-share-alt"></i>
			Share Gallery
		</button>
		<button class="action-btn" id="downloadCatalog">
			<i class="fas fa-download"></i>
			Download Catalog
		</button>
		<button class="action-btn" id="viewFavorites">
			<i class="fas fa-heart"></i>
			View Favorites (<span id="favCount">0</span>)
		</button>
	</div>
</section>

