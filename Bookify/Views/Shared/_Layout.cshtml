<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - Bookify</title>
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link href="~/icon.png" rel="icon" />
    </head>

    <body>
        <header>
            <nav class="center-between">
                <div class="logo-container">
                    <a asp-controller="Home" asp-action="Index">
                        <h3>Bookify</h3>
                    </a>
                </div>

                <div class="center-center">
                    <div class="hamburgers">
                        <label class="hamburger">
                            <input type="checkbox" />
                            <span class="bar"></span>
                            <span class="bar"></span>
                            <span class="bar"></span>
                        </label>

                        <div id="navbarContent">
                            <ul class="center-center menu">
                                <li><a asp-controller="Rooms" asp-action="MakeOrder">MakeOrder</a></li>
                                <li><a asp-controller="Rooms" asp-action="Terms">Terms</a></li>
                                <li><a asp-controller="History" asp-action="History">history</a></li>

                                <li>
                                    Category▾
                                    <ul class="sub-menu">
                                        <li><a asp-controller="" asp-action="">All</a></li>
                                        <li><a asp-controller="" asp-action="">Standard</a></li>
                                        <li><a asp-controller="" asp-action="">Deluxe</a></li>
                                        <li><a asp-controller="" asp-action="">Suite</a></li>
                                        <li><a asp-controller="" asp-action="">Special View</a></li>
                                        <li><a asp-controller="" asp-action="">Family & Group</a></li>
                                    </ul>
                                </li>
                                <li>
                                    Authentication▾
                                    <ul class="sub-menu">
                                        <li><a asp-controller="Auth" asp-action="Login">login</a></li>
                                        <li><a asp-controller="Auth" asp-action="Signup">signup</a></li>
                                    </ul>
                                </li>
<li>
                                    Profile▾
                                    <ul class="sub-menu">
                                        <li><a asp-controller="Profile" asp-action="Index">Account Details</a></li>
                                        <li><a asp-controller="Profile" asp-action="Edit">Edit Profile</a></li>
                                        <li><a asp-controller="Profile" asp-action="ChangePassword">Change Password</a></li>
                                        <li><a asp-controller="Profile" asp-action="Reviews">My Reviews</a></li>
                                        <li><a asp-controller="Profile" asp-action="Logout">Logout</a></li>
                                    </ul>
                                </li>                            </ul>
                        </div>
                    </div>
                </div>
            </nav>
        </header>

        <div>
            <main role="main" style="padding-top:8vh;" class="pages">
                @RenderBody()
            </main>
        </div>

        <footer>
            <div class="center-center foot-container">
                <div class="foot foot1">
                    <h3>Privacy Policy</h3>
                    <p>
                        At Bookify, we respect your privacy. Any personal information 
                        you share with us (such as your name, email, or preferences) is
                        kept secure and used only to improve your experience.
                    </p>
                </div>

                <div class="foot foot1">
                    <h3>Reservations & Payments</h3>
                    <p>All reservations are subject to availability and confirmation.</p>
                    <p>Prices shown are in the selected currency and may include applicable taxes or fees.</p>
                    <p>Full or partial payment may be required to secure a booking.</p>
                </div>

                <div class="foot foot2">
                    <h3>Contact Us</h3>
                    <p>📍 123 Main Street, Cairo</p>
                    <p>📧 info@bookifyhotel.com</p>
                    <p>📞 +20 123 456 789</p>
                </div>

                <div class="foot foot3">
                    <h3>Quick Links</h3>
                    <ul>
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a href="/Rooms">Rooms</a></li>
                        <li><a href="/About">About Us</a></li>
                        <li><a href="/Contact">Contact</a></li>
                    </ul>
                </div>
            </div>

            <div class="center-center rights">
                © 2025 Bookify Hotel | All rights reserved
            </div>
        </footer>

        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
